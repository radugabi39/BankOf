<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>bank.of</groupId>
	<artifactId>bank-of-pom</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>ear</packaging>
	<dependencies>
		<dependency>
			<groupId>bank.of</groupId>
			<artifactId>bank-of-dao</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>bank.of</groupId>
			<artifactId>bank-of-spring</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>bank.of</groupId>
			<artifactId>bank-of-rest</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>bank.of</groupId>
			<artifactId>bank-of-web</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>bank.of</groupId>
			<artifactId>bank-of-models</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<version>2.3.2</version>
				<!-- configuring the ear plugin -->
				<configuration>
					<modules>
						<jarModule>
							<groupId>bank.of</groupId>
							<artifactId>bank-of-dao</artifactId>
						</jarModule>
						<jarModule>
							<groupId>bank.of</groupId>
							<artifactId>bank-of-spring</artifactId>
						</jarModule>
						<jarModule>
							<groupId>bank.of</groupId>
							<artifactId>bank-of-models</artifactId>
						</jarModule>
						<webModule>
							<groupId>bank.of</groupId>
							<artifactId>bank-of-rest</artifactId>
						</webModule>
						<webModule>
							<groupId>bank.of</groupId>
							<artifactId>bank-of-web</artifactId>
						</webModule>
					</modules>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>